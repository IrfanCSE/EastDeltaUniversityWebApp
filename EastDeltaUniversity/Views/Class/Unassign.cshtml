
@{
    ViewBag.Title = "Unassign";
}

    <h2>Unallocate</h2>

@using (Html.BeginForm("UnassignClasses", "Class", FormMethod.Post))
{
    <input id="Unassign-Click" type="submit" value="Unallocate Classes" class="btn btn-danger col-md-offset-5" />
}

@section scripts
{
    <script>
        $(function() {

            $("#Unassign-Click").click(function() {
                var result = confirm("Are You Sure To Unassign All Courses ?");
                if (result == false) {
                    return false;
                }
            });

        });
    </script>
}
